@model Tshirtstore.Models.Product

@{
    ViewBag.Title = "Delete";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h2 class="h2">Delete Confirm</h2>

<h2 class="h2">Are you sure you want to delete this Tshirt?</h2>
<div>
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(model => model.ProductName)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.ProductName)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.ImageThumb)
        </dt>

        <dd>
            <img src="~/Content/images/Tshirt/@ViewBag.catnm/@Model.ImageThumb" alt="t" />
        </dd>


    </dl>

    @using (Html.BeginForm()) {
        @Html.AntiForgeryToken()

        <div class="form-actions no-color">
            <input type="submit" value="Delete" class="btn btn-default" /> |
            @Html.ActionLink("Back to List", "RemoveProduct")
        </div>
    }
</div>
