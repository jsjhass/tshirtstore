@model Tshirtstore.Models.Client

@{
    ViewBag.Title = "Login";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="pagecontent">
    <h2 class="h2">Login</h2>
    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()
        <div class="form-horizontal">
            <div class="form-group row">
                <div class="col-md-2">@Html.LabelFor(m => m.UserName, htmlAttributes: new { @class = "control-label" })</div>
                <div class="col-md-10">
                @Html.TextBoxFor(m => m.UserName, htmlAttributes: new { @class = "form-control" })
                @Html.ValidationMessageFor(m => m.UserName, "", new { @class = "text-danger" }) 
                </div>
            </div>
            <div class="form-group row">
                <div class="col-md-2">@Html.LabelFor(m => m.Password, htmlAttributes: new { @class = "control-label" })</div>
                <div class="col-md-10">
                @Html.PasswordFor(m => m.Password, htmlAttributes: new { @class = "form-control" })
                @Html.ValidationMessageFor(m => m.Password, "", new { @class = "text-danger" }) 
                </div>
            </div>
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Login" class="butn" />
            </div>            
        </div>
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
    }
    <br /><br />
    New User. @Html.ActionLink("Register here","Registration","MyAccount") 
</div>
@section Scripts {
    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/jqueryval")
}
